        script.
            let rowCount = 1

            function addFormRow() {
                rowCount++

                // create form row
                const rowDiv = document.createElement('div')
                rowDiv.setAttribute('class', `form-group remove-class${rowCount}`)
                rowDiv.appendChild(document.getElementById('form-inputs').cloneNode(true))

                // replace + to - button
                const removeButton = `<button class="btn btn-danger" type="button" onclick="removeFormRow(${rowCount})">
                                        <span class="fa fa-minus" aria-hidden="true"></span>
                                    </button>
                                    <div class="clear"></div>`
                rowDiv.getElementsByClassName('input-group-btn')[0].innerHTML = removeButton

                const objTo = document.getElementById('form-rows')
                objTo.appendChild(rowDiv)
            }

            function removeFormRow(rid) {
                const element = document.getElementsByClassName(`remove-class${rid}`)[0]
                element.parentNode.removeChild(element)
            }

        body
            div.card.panel-default
                .card-header
                    h3 Need a Doc - Administrador
                .card-header Horários Disponíveis
                .card-body

                    form(action='/test' method='POST')
                        #form-rows

                        #form-inputs
                            .row

                                .col-sm-3.nopadding
                                    .form-group
                                        .input-group
                                            select.form-control#weekday(name='weekday')
                                                each d in weekdays
                                                    option(value=d)
                                                        =d

                                .col-sm-3.nopadding
                                    .form-group
                                        .input-group
                                            select.form-control#firstTime(name='firstTime')
                                                - const times = ['00:00', '01:00', '23:30']
                                                each d in times
                                                    option(value=d)
                                                        =d

                                .col-sm-3.nopadding
                                    .form-group
                                        .input-group
                                            select.form-control#lastTime(name='lastTime')
                                                each d in times
                                                    option(value=d)
                                                        =d

                                .input-group-btn
                                    button.btn.btn-success(type="button" onclick="addFormRow()")
                                        span.fa.fa-plus(aria-hidden='true')


                        button.btn.btn-primary(type='submit') Atualizar horários

                .card-footer
                    small Press + to add another form field, press - to remove form field :)

